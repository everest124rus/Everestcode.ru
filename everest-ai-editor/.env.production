# Production Environment Variables
# Copy this content to .env.production

PORT=5001
JWT_SECRET=your-super-secret-jwt-key-change-in-production-very-long-key-here
OPENAI_API_KEY=your-actual-openai-api-key-here
GIGACHAT_AUTH_KEY=your-actual-gigachat-key-here
GIGACHAT_CLIENT_ID=your-actual-client-id-here
GIGACHAT_SCOPE=GIGACHAT_API_PERS
NODE_ENV=production

# Database connection (Production)
DATABASE_URL="postgresql://everest_user:strong_password@localhost:5432/everest_ai_editor?schema=public&sslmode=require"

# Frontend configuration (Production)
REACT_APP_API_BASE_URL=https://yourdomain.com/api
REACT_APP_WS_URL=wss://yourdomain.com

# Production settings
DEV_MODE=false
DEBUG=false

# Security
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Performance
COMPRESSION=true
CACHE_TTL=3600
