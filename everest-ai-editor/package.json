  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "node server.js",
    "client": "PORT=3000 react-scripts start",
    "build": "npm run build:all",
    "build:frontend": "react-scripts build && echo '✅ Frontend built successfully'",
    "build:backend": "echo '✅ Backend is ready (no compilation needed)'",
    "build:all": "npm run build:frontend && npm run build:backend",
    "deploy": "bash deploy.sh",
    "pm2:start": "pm2 start server.js --name \"everest-ai-editor\" --watch",
    "pm2:stop": "pm2 stop everest-ai-editor",
    "pm2:restart": "pm2 restart everest-ai-editor",
    "test:setup": "bash test-setup.sh",
    "test:api": "curl -f http://localhost:5005/api/health || echo 'API не доступен'",
    "setup": "npm run test:setup && npm run build:all",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "proxy": "http://localhost:5005",
  "homepage": "https://everestcode.ru",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "node-gyp": "^11.4.2",
    "typescript": "^4.9.5"
  }
